<p id="notice"><%= notice %></p>

<h1 style="font-family: 'M PLUS 1p', sans-serif; font-size: 3rem; text-align: center; margin-bottom: 2rem;">Rules</h1>

<div class="rules-list">
  <% @rules.each do |rule| %>
    <div class="rule-item" style="border: 1px solid #ccc; border-radius: 8px; padding: 1rem; margin-bottom: 1rem;">
      <h2 style="font-family: 'M PLUS 1p', sans-serif; font-size: 2rem; color: #333;"><%= rule.title %></h2>
      <p><strong>Created at:</strong> <%= rule.created_at.strftime("%Y-%m-%d %H:%M") %></p> <!-- 開始日を表示 -->

      <div class="rule-actions">
        <%= link_to 'Show', rule, class: 'btn btn-info' %>

        <% unless current_user.general? %>
          <%= link_to 'Edit', edit_rule_path(rule), class: 'btn btn-warning' %>
          <%= link_to 'Destroy', rule, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<style>
  .rules-list {
    display: flex;
    flex-direction: column;
    align-items: center; /* 中央揃え */
  }
  .rule-item {
    width: 80%; /* 幅を調整 */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }
  .rule-actions {
    margin-top: 1rem;
  }
</style>